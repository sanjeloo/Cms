@model IEnumerable<NewsLetter>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Product list card start -->
                <div class="card">
                    <div class="card-header force-rtl">
                        <h5 style="color:white">لیست شماره ها</h5>
                        <button style="display:block" type="button" id="showModal" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger " data-modal="modal-13">
                       ارسال خبرنامه به همه
                        </button>
                    </div>
                    <div class="card-block">
                        <div class="table-responsive">
                            <div class="table-content">
                                <div class="project-table">
                                    <table id="e-product-list" class="table table-striped dt-responsive nowrap">
                                        <thead>
                                            <tr>

                                                <th>تلفن</th>



                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var nl in Model)
                                            {

                                                <tr id="@nl.Id">

                                                    <td class="pro-name">
                                                        <h6>@nl.Mobile</h6>

                                                    </td>


                                                    <td class="action-icon">
                                                        <button onclick="showDeleteModal(@nl.Id)" class="text-muted" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><i class="icofont icofont-delete-alt"></i></button>

                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Product list card end -->
            </div>
        </div>
        <div class="md-modal md-effect-13 addcontact" id="modal-13">
            <div class="md-content">
                <h3 class="f-26">ارسال خبرنامه به همه شماره ها</h3>
                <form id="frmSendNewsLetter" method="post">
                  
                    <div class="input-group force-rtl">
                        <span class="input-group-addon"><i class="icofont icofont-user"></i></span>
                        <input id="Title" name="Title" type="text" class="form-control pname" placeholder="متن خبرنامه">
                    </div>
                 
                    <div class="text-center">
                        <button type="button" id="btnSend" class="btn btn-success waves-effect m-r-20 f-w-600 d-inline-block save_btn">ارسال</button>
                        <button type="button" id="closeModal" class="btn btn-primary waves-effect m-r-20 f-w-600 md-close d-inline-block close_btn">برگشت</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- remove Contact Ends Model end-->
        <div class="modal fade modal-dialog-centered " id="deleteModal" tabindex="-1" role="dialog">
            <div class="modal-dialog md-effect-13 addcontact" role="document">
                <div class="modal-header">
                    <h4>آیا ار حذف این مورد اطمینان دارید؟</h4>
                </div>
                <div class="modal-content">


                    <div class="text-center">
                        <button type="button" onclick="deleteuser()" class="btn btn-danger waves-effect m-r-20 f-w-600 d-inline-block save_btn">حذف</button>
                        <button type="button" data-dismiss="modal" class="btn btn-default waves-effect m-r-20 f-w-600 md-close d-inline-block close_btn">برگشت</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
@section Scripts
{

    <script src="~/Manage/scripts/NewsLetter/NewsLetterList.js"></script>
}