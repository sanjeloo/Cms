@model CreateProductViewModel
@{
    ViewData["Title"] = "createUser";
}

<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-header start -->
        <div class="page-header">
            <div class="row align-items-end">
                <div class="col-lg-8">
                    <div class="page-header-title">
                        <div class="d-inline">
                           
                            @*<span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a  asp-area="Manage" asp-controller="Home" asp-action="Index" > <i class="feather icon-home"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-area="Manage" asp-controller="Products">مدیریت محصول</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-area="Manage" asp-controller="Products" asp-action="Insert" >افزودن محصول</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Basic Inputs Validation start -->
                    <div class="card">
                        <div class="card-header">
                            <h5>افزودن محصول</h5>
                            
                         
                        </div>
                        <div class="card-block">
                            <form id="frmCreateProduct" enctype="multipart/form-data"  method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">نام</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Name">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">قیمت</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Price">
                                        <span class="text-danger" asp-validation-for="Price"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">توضیحات</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" asp-for="Description">
                                        <span class="text-danger"  asp-validation-for="Description"></span>
                                    </div>
                                </div>
                                
                               
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">  آپلود تصویر</label>
                                    <div class="col-sm-10">
                                        <input type="file" name="files" id="filer_input" accept="image/*" >

                                    </div>
                                </div>
                                <input type="hidden" id="Photo" name="Photo" />
                                @*<div class="card">
                                    <div class="card-header">
                                        آپلود تصویر
                                      
                                    </div>
                                    <div class="card-block">
                                        <input type="file" name="files[]" id="filer_input" multiple="multiple">
                                    </div>
                                </div>*@
                               
                                <div class="form-group row">
                                    <label class="col-sm-2"></label>
                                    <div class="col-sm-10">
                                        <button id="btnCreate" type="submit" class="btn btn-primary m-b-0">ثبت</button>
                                    </div>
                                </div>

                                <div id="allError" class="text-danger"></div>
                            </form>
                        </div>
                       
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/Manage/scripts/Products/CreateProduct.js"></script>
}
