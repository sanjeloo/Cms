@model IEnumerable<Product>
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Product list card start -->
            <div class="card">
                <div class="card-header">
                    <h5>لیست محصولات</h5>
                    <button style="display:none !important" type="button" id="showModal" class="btn btn-primary waves-effect waves-light f-right d-inline-block md-trigger" data-modal="modal-13">
                        <i class="icofont icofont-plus m-r-5"></i> Add Product
                    </button>
                </div>
                <div class="card-block">
                    <div class="table-responsive">
                        <div class="table-content">
                            <div class="project-table">
                                <table id="e-product-list" class="table table-striped dt-responsive nowrap">
                                    <thead>
                                        <tr>
                                            <th>تصویر</th>
                                            <th>نام</th>
                                            <th>قیمت</th>
                                            @* <th>Stock</th>*@

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pd in Model)
                                        {

                                            <tr id="@pd.Id">
                                                <td class="pro-list-img">
                                                    <img src="\images\@pd.Photo" class="img-fluid" alt="tbl">
                                                </td>
                                                <td class="pro-name">
                                                    <h6>@pd.Name</h6>
                                                    <span>@Html.Raw(pd.Description)</span>
                                                </td>
                                                @*<td>$456</td>*@
                                                <td>
                                                    <label class="text-danger">@pd.Price.ToString("N2")</label>
                                                </td>
                                                <td class="action-icon">
                                                    <button onclick="EditProduct(@pd.Id)" class="m-r-15 text-muted" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="icofont icofont-ui-edit"></i></button>
                                                    <button onclick="showDeleteModal(@pd.Id)" class="text-muted" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><i class="icofont icofont-delete-alt"></i></button>

                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Product list card end -->
        </div>
    </div>
    <!-- Add Contact Start Model start-->
    <div class="md-modal md-effect-13 addcontact" id="modal-13">
        <div class="md-content">
            <h3 class="f-26 ">ویرایش محصول</h3>
            <form id="frmEditProduct" method="post">
                <div class="input-group">
                    <img id="Photo" name="Photo" class="image" src="" />
                    @*<input type="text" class="form-control pname" placeholder="Prodcut Name">
                        <span class="input-group-addon btn btn-primary">Chooese File</span>*@
                </div>
                <div class="input-group force-rtl">
                    <span class="input-group-addon force-rtl"><i class="icofont icofont-user"></i></span>
                    <input id="Name" name="Name" type="text" class="form-control pname" placeholder="نام">
                </div>
                <div class="input-group force-rtl">
                    <span class="input-group-addon force-rtl"><i class="icofont icofont-user"></i></span>
                    <input id="Price" name="Price" type="text" class="form-control pamount" placeholder="قیمت">
                </div>
                <div class="input-group force-rtl">
                    <span class="input-group-addon"><i class="icofont icofont-user"></i></span>
                    <input id="Description" name="Description" type="text" class="form-control pamount" placeholder="توضیحات">
                </div>
                <input type="hidden" id="Id" name="Id" />
                @*<div class="input-group">
                        <select id="hello-single" class="form-control stock">
                            <option value="">---- Select Stock ----</option>
                            <option value="married">In Stock</option>
                            <option value="unmarried">Out of Stock</option>
                            <option value="unmarried">Law Stock</option>
                        </select>
                    </div>*@
                <div class="text-center">
                    <button type="button" id="btnEdit" class="btn btn-primary waves-effect m-r-20 f-w-600 d-inline-block save_btn">ذخیره</button>
                    <button type="button" id="closeModal" class="btn btn-primary waves-effect m-r-20 f-w-600 md-close d-inline-block close_btn">برگشت</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add Contact Ends Model end-->
    <!-- remove Contact Ends Model end-->
    <div class="modal fade modal-dialog-centered " id="deleteModal" tabindex="-1" role="dialog">
        <div class="modal-dialog md-effect-13 addcontact" role="document">
            <div class="modal-header">
                <h4>آیا ار حذف این مورد اطمینان دارید؟</h4>
            </div>
            <div class="modal-content">


                <div class="text-center">
                    <button type="button" onclick="deleteuser()" class="btn btn-danger waves-effect m-r-20 f-w-600 d-inline-block save_btn">حذف</button>
                    <button type="button" data-dismiss="modal" class="btn btn-default waves-effect m-r-20 f-w-600 md-close d-inline-block close_btn">برگشت</button>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts
{

    <script src="~/Manage/scripts/Products/ProductsList.js"></script>
}