@model EditRoleViewModel



<h3 class="force-rtl">ویرایش نقش</h3>

<form method="post">


    <div class="form-group">
        @* <label asp-for="RoleId" class="control-label">Role Id</label>*@
        <input asp-for="RoleId" hidden class="form-control" />
        @*<span asp-validation-for="RoleId" class="text-danger"></span>*@
    </div>


    <div class="form-group force-rtl">
        <label asp-for="RoleName" class="control-label">نام نقش</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group force-rtl">
        <input type="submit" class="btn btn-success " value=" ویرایش" />
    </div>
    <div class="card">
        <div class="card-header ">کاربران این نقش</div>
        <div class="card-body">
            @foreach (var item in Model.UserName)
            {
                <div class="form-group">
                    <label class="control-label">@item</label>

                </div>

            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-action="EditUserRole" asp-route-roleid="@Model.RoleId">افزودن کاربران</a>
            <a class="btn btn-default" asp-action="RolesList" asp-route-roleid="@Model.RoleId">برگشت</a>
        </div>
    </div>

</form>

