@model List<EditUserRoleViewModel>
@{
    ViewData["Title"] = "EditUserRole";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            ویرایش کاربران این نقش
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserName" />
                    @*<input hidden asp-for="@Model[i].UserId" />*@
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-success" value="ذخیره" />
        </div>
    </div>
    <a class="btn btn-info" asp-action="RolesList">برگشت</a>
</form>

