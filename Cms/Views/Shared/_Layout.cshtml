<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cms</title>
    <link href="~/lib/bootstrap/dist/css/bootsrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="\Manage\assets\css\style.css">
    <!-- jquery file upload Frame work -->
    <link href="\Manage\assets\pages\jquery.filer\css\jquery.filer.css" type="text/css" rel="stylesheet">
    <link href="\Manage\assets\pages\jquery.filer\css\themes\jquery.filer-dragdropbox-theme.css" type="text/css" rel="stylesheet">
    <!-- Notification.css -->
    <link rel="stylesheet" type="text/css" href="\Manage\assets\pages\notification\notification.css">


    <script type="text/javascript" src="\Manage\bower_components\jquery\js\jquery.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container">
                <a class="navbar-brand" asp-area="Manage" asp-controller="Home" asp-action="Index">Cms</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="LogOut">خروج</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">ورود</a>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                    <ul class="navbar-nav flex-grow-1 flex-row-reverse ">
                        <li class="nav-item background-primary">
                            <a class="nav-link  " asp-area="" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                        </li>
                        <li class="nav-item color-info">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ListProduct">محصولات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="ListNews">اخبار</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="ListArticles">مقالات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Contactus">تماس باما</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="loading" class="aminpreloader hide"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container force-rtl">

            <input type="tel" class="force-rtl  col-md-4 " id="NewsLetterNumber" name="Number" placeholder=" جهت عضویت در خبرنامه شماره تلفن خود را وارد کنید" />
            <button id="NewsLetter" class="btn  btn-success">عضویت</button>
            &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;  &nbsp;
            &copy; طراحی و توسعه توسط امین رحمتی

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="\Manage\bower_components\jquery-ui\js\jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/NewFolder/Image.js"></script>
    <!-- notification js -->
    <script type="text/javascript" src="\Manage\assets\js\bootstrap-growl.min.js"></script>
    <script type="text/javascript" src="\Manage\assets\pages\notification\notification.js"></script>
    <!-- jquery file upload js -->
    <script src="\Manage\assets\pages\jquery.filer\js\jquery.filer.min.js"></script>
    <script src="\Manage\assets\pages\filer\custom-filer.js" type="text/javascript"></script>
    <script src="\Manage\assets\pages\filer\jquery.fileuploads.init.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
